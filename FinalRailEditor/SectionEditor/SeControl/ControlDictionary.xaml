<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:slf="clr-namespace:FinalRailEditor.SectionEditor.SeControl">
    <ContextMenu x:Key="CreateST">
        <MenuItem x:Name="haha" Header="Новый раздельный пункт" Command="slf:Commands.CreateStation"></MenuItem>
    </ContextMenu>
    <Style TargetType="Ellipse" x:Key="EllStyle">
        <Setter Property="Opacity" Value="0.8"></Setter>
        <Setter Property="Fill" Value="Black"></Setter>
        <Setter Property="ContextMenu" Value="{StaticResource CreateST}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Fill" Value="Black"/>
                <Setter Property="Opacity" Value="0.8"></Setter>

            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>